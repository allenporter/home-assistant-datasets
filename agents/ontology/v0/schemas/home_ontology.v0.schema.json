{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "home_ontology.v0.schema.json",
    "type": "object",
    "required": [
        "schema_version",
        "floors"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "home_ontology.v0"
        },
        "floors": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "rooms"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "rooms": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "required": [
                                "id",
                                "name",
                                "aliases",
                                "devices"
                            ],
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "aliases": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "devices": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "object",
                                        "required": [
                                            "id",
                                            "type",
                                            "aliases",
                                            "capabilities",
                                            "entities"
                                        ],
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "type": {
                                                "type": "string"
                                            },
                                            "aliases": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            },
                                            "capabilities": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            },
                                            "entities": {
                                                "type": "object",
                                                "additionalProperties": {
                                                    "type": "object",
                                                    "required": [
                                                        "unit"
                                                    ],
                                                    "properties": {
                                                        "unit": {
                                                            "type": [
                                                                "string",
                                                                "null"
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}